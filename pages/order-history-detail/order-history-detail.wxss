.order-history-detail .status {
  font-size: 14px;
}

.order-history-detail .status,
.order-history-detail .address,
.order-history-detail .good,
.order-history-detail .order-info {
  background-color: #ffffff;
  padding: 10px 20px;
  margin-bottom: 10px;
}

.order-history-detail .address .img {
  width: 15%;
  float: left;
  display: flex;
  align-items: center;
}

.order-history-detail .address .icon {
  width: 35px;
  height: 35px;
}

.order-history-detail .address .info {
  width: 85%;
  float: right;
}

.order-history-detail p {
  font-size: 14px;
  color: grey;
  display: block;
}

.order-history-detail .good .good-img {
  width: 25%;
  float: left;
}

.order-history-detail .good .good-img .image {
  width: 100%;
  height: auto;
  margin-left: -7px;
}

.order-history-detail .good .good-info {
  width: 73%;
  float: right;
}

.order-history-detail .good .good-info .name {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  height: 55px;
  max-height: 60px;
}

.order-history-detail .good .good-price {
  clear: both;
}

.order-history-detail .good .good-price .border-top {
  font-size: 14px;
  margin-top: 8px;
  padding-top: 5px;
  border-top: 1px solid #f9f9f9;
}

.order-history-detail .right {
  float: right;
}

.order-history-detail .order-info .title {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}