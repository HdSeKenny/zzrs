<view class="home-page">
  <i-spin fix size="large" wx:if="{{spinShow}}" i-class="spinner"></i-spin>
  <swiper indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" class='swiper' bindtap="bindGuideTap">
    <block wx:for="{{sliders}}" wx:key="{{index}}">
      <swiper-item><image src="{{item.imgurl}}" class="slide-image"/></swiper-item>
    </block>
  </swiper>
  <view class='items-wrapper'>
    <view
      class="{{item.classes}}"
      wx:for="{{goods}}"
      wx:key="{{item.id}}"
      bindtap="bindDetailTap"
      data-id="{{item}}"
    >
      <view class="tag">
        <image src="/public/images/首页界面切图/正在开抢猴子.png" class="grabbing-monkey"></image>
        <block wx:if="{{item.isGrabbing}}">正在开抢</block>
        <block class='count-down' wx:else>
          <span class='time'>{{item.hours}}</span><span class="unit">时</span>
          <span class='time'>{{item.minutes}}</span><span class="unit">分</span>
          <span class='time'>{{item.seconds}}</span><span class="unit">秒</span>
        </block>
      </view>
      <view class='item-rows'>
        <block>
          <view class='image-row'><image src="{{item.goodimg}}"></image></view>
          <span class='name'>{{item.goodname}}</span>
          <p class='lowest-row'>最低价格:<span class="price">￥{{item.currentprice}}</span></p>
          <p class="looker-count">{{item.lookercount}} 人围观</p>
        </block>
      </view>
    </view>
  </view>
</view>

