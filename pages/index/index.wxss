.home-page {
  background-color: #f9f9f9;
  box-sizing: border-box;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.swiper {
  margin-bottom: 15px;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.item-block {
  width: 45.5%;
  font-size: 15px;
  margin: 0 3%;
  display: inline-block;
  background-color: #ffffff;
}

.item-block.right-one {
  margin-left: 0;
}

.item-rows {
  padding: 5px 10px;
}

.item-rows .image-row {
  text-align: center;
}

.item-rows image {
  width: 85%;
  height: auto;
}

.item-rows .name {
  width: 100%;
  color: #333;
  font-weight: bold;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space:nowrap;
  display:inline-block;
  text-align: center;
}

.item-rows .lowest-row {
  font-size: 12px;
  color: #999999;
}

.item-rows .looker-count {
  display: block;
  text-align: right;
  font-size: 12px;
  color: #999999;
}

.count-down {
  font-weight: 600;
  position: absolute;
  background: #FFFFFF;
  color: #333;
  text-align: center;
  width: 42%;
  top: 42%;
  opacity: .8;
}

.tag .time {
  font-size: 15px;
  font-weight: 600;
}
.tag .unit {
  font-size: 11px;
  font-weight: 400;
  margin-right: 2px;
}

.grabbing-monkey {
  width: 30px;
  height: auto;
  margin-right: 5px;
}

.home-page .tag {
  font-size: 15px;
  border-radius: 6px;
  margin: 0;
  padding-left: 6px;
  padding-right: 10px;
  width: max-content;
  display: flex;
  align-items:center;
}

.auth .header {
  margin: 60rpx 50rpx;
  text-align: center;
  width: 650rpx;
}

.auth .header image {
  width: 200rpx;
  height: 200rpx;
}

.auth .content {
  margin: 0 70rpx;
  font-size: 16px;
}

.auth .content text {
  display: block;
  color: #9d9d9d;
  margin-top: 10rpx;
}

.auth .bottom {
  border-radius: 80rpx;
  margin: 50rpx;
  font-size: 35rpx;
}

.home-page .no-data.i-load-more-line .i-load-more-tip {
  top: 0 !important;
}