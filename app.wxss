/**app.wxss**/
page {
  height: 100%;
}

.container {
  height: 100%;
  /* display: flex; */
  /* flex-direction: column; */
  /* align-items: center; */
  justify-content: space-between;
  /* padding: 40rpx 0; */
  box-sizing: border-box;
}

.block {
  display: block;
}

.price {
  color: #FFA101;
  font-size: 14px;
  font-weight: bold;
}

.lowest-row {
  font-size: 11px;
  color: #999999;
}

.header-background {
  width: 100%;
  height: 100px;
}

.no-look-msg,
.no-msg {
  width: 100%;
  height: 230px;
  margin-top: 40px;
}

.box-shadow {
  box-shadow: 0 3px 6px rgba(0,0,0,0.12), 0 3px 6px rgba(0,0,0,0.12);
}

.item-block {
  box-shadow: 0 3px 6px rgba(0,0,0,0.12), 0 3px 6px rgba(0,0,0,0.12);
}

.tag {
  padding: 5px 15px;
  position: relative;
  font-size: 12px;
  border-radius: 5px;
  display: inline-block;
  z-index: 1;
}

.tag-btn {
  height: 30px;
  font-size: 12px;
  line-height: 30px;
  border-radius: 3px;
  padding: 0px 10px;
}

.tag,
.tag-btn {
  color:#FFFFFF;
  background-color: #FFA101;
  box-shadow: unset;
  border: none;
}

.tag-btn.stopped {
  background: #999999;
}

.common-ft-color {
  color: #FFA101 !important;
}

.common-bg-color {
  background-color: #FFA101 !important;
  box-shadow: unset !important;
  border: none !important;
}