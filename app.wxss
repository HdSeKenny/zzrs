/**app.wxss**/
@import "/modules/wxParse/wxParse.wxss";

page {
  /* height: 100%; */
  background-color: #f9f9f9;
  z-index: 9999998;
}

.custom-nav-mg {
  margin-top: 17%;
}

.container {
  background-color: #f9f9f9;
  justify-content: space-between;
  box-sizing: border-box;
}


.block {
  display: block;
}

.bold {
  font-weight: bold;
}

.price {
  color: #F2AA72 !important;
  font-size: 14px !important;
  font-weight: bold !important;
}

.lowest-row {
  font-size: 11px;
  color: #999999;
}

.header-wrapper {
  height: 130px;
  z-index: 9999;
  position: fixed;
  background-color: #f9f9f9;
  width: 100%;
}

.content {
  margin-top: 135px;
  padding: 0 10px;
}

.header-background {
  width: 100%;
  height: 130px;
  position: fixed;
}

.no-look-msg,
.no-msg {
  width: 100%;
  height: 230px;
  margin-top: 40px;
}

.box-shadow {
  box-shadow: 0 3px 6px rgba(0,0,0,0.12), 0 3px 6px rgba(0,0,0,0.12);
}

.tag {
  padding: 4px 5px;
  position: relative;
  font-size: 12px;
  border-radius: 5px;
  display: inline-block;
  z-index: 1;
}

.tag-btn {
  height: 27px;
  font-size: 12px;
  line-height: 27px;
  border-radius: 15px;
  padding: 0px 13px;
}

.tag,
.tag-btn {
  color:#FFFFFF;
  background-color: #F2AA72;
  box-shadow: unset;
  border: none;
}

.tag-btn.stopped {
  background: #999999;
}

.common-ft-color {
  color: #F2AA72 !important;
}

.common-bg-color {
  background-color: #F2AA72 !important;
  box-shadow: unset !important;
  border: none !important;
}